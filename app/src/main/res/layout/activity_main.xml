<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:weightSum="1"
    android:padding="25dp"
    android:background="@color/colorForm"
    tools:context="com.mate.narutoquiz.MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:id="@+id/title"
        android:text="Ninja Registration"
        android:layout_marginLeft="50dp"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/leafvillage"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="20dp"
        android:id="@+id/logo"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:hint="Your Name"
        android:id="@+id/fname"
        android:singleLine="true"
        android:layout_marginTop="20dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:hint="Clan Name"
        android:singleLine="true"
        android:id="@+id/cname"
        android:layout_marginTop="00dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are you a?"
            android:layout_marginTop="20sp"
            android:textSize="20sp"
            android:id="@+id/gender"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:id="@+id/radioGroup">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kunoichi"
                    android:textSize="20sp"
                    android:id="@+id/female" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shinobi"
                    android:textSize="20sp"
                    android:id="@+id/male"/>
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proceed"
        android:layout_marginTop="20dp"
        android:id="@+id/proceedBtn"
        android:onClick="Proceed" />
</LinearLayout>
